<% post.comments.each do |comment| %>
  <div class="media border mb-3">
    <%= link_to admin_user_path(comment.user) do %>
      <%= image_tag comment.user.get_profile_image, size: "64x64", class:"bd-placeholder-img align-self-center mx-3"; %>
    <% end %>
    <div class="media-body ml-4 p-3">
      <p><%= comment.created_at.strftime('%Y/%m/%d') %></p>
      <p><%= comment.comment %></p>
        <%= link_to admin_post_comment_path(comment.post, comment), method: :delete, class:"text-dark", remote: true do %>
          <i class="fa-solid fa-trash-can"></i>
        <% end %>
    </div>
  </div>
<% end %>