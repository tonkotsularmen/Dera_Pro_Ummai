<main>
  <div class="container">
    <div class="row mt-2">
      <div class="offset-3 col-6 text-center mt-3">
        <div><h3>検索結果</h3></div>
      </div>
    </div>
    <div class="row">
      <div class="offset-2 col-8">
        <% if @range == "User" %>
        <div class="row"><div class="col d-flex justify-content-end"><%= @users.count %>件が該当しました</div></div>
          <table class="table table-striped table-hover border-0">
            <thead class="thead-light">
              <tr>
                <th scope="col"></th>
                <th scope="col" class="text-center">ユーザーネーム</th>
                <th scope="col" class="text-center">メールアドレス</th>
                <th scope="col" class="text-center">会員ステータス</th>
                <th scope="col" class="text-center">会員ID</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
              <tr>
                <th scope="row" class="p-1 text-center">
                  <%= link_to admin_user_path(user) do %>
                    <%= image_tag user.get_profile_image, size: "40x40", class: "rounded-circle" %>
                  <% end %>
                </th>
                <td class="text-center">
                  <%= link_to admin_user_path(user) do %>
                    <%= user.user_name %>
                  <% end %>
                </td>
                <td class="text-center"><%= user.email %></td>
                <td class="text-center">
                  <% if user.user_status == 1 %>
                    有効会員
                  <% else %>
                    退会済み
                  <% end %>
                </td>
                <td class="text-center"><%= user.id %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
        <div class="row"><div class="col d-flex justify-content-end"><%= @posts.count %>件が該当しました</div></div>
        <table class="table table-striped table-hover border-0">
          <thead class="thead-light">
            <tr>
              <th scope="col" class="text-center">投稿画像</th>
              <th scope="col" class="text-center">投稿タイトル</th>
              <th scope="col" class="text-center">投稿ユーザー</th>
              <th scope="col" class="text-center">会員ステータス</th>
              <th scope="col" class="text-center">会員ID</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
            <tr>
              <th scope="row" class="p-1 text-center">
                <%= link_to admin_post_path(post) do %>
                  <%= image_tag post.image, size: "40x40", class: "rounded-circle" %>
                <% end %>
              </th>
              <td class="text-center">
                <%= link_to admin_post_path(post) do %>
                  <%= post.title %>
                <% end %>
              </td>
              <td class="text-center"><%= post.user.user_name %></td>
              <td class="text-center">
                <% if post.user.user_status == 1 %>
                  有効会員
                <% else %>
                  退会済み
                <% end %>
              </td>
              <td class="text-center"><%= post.user.id %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="offset-4 col-4 d-flex justify-content-center">
      </div>
    </div>
  </div>
</main>