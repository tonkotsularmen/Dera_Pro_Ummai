<main>
  <div class="container">
    <div class="row">

      <% @users.each do |user| %>
        <div class="col-md-4 border pt-2 pb-1">
          <div class="p-1">
            <%= link_to admin_user_path(user) do %>
              <%= image_tag user.get_profile_image, class: "rounded-circle icon-40" %>
            <% end %>
            <span class="ml-3">
              <%= link_to admin_user_path(user) do %>
                <%= user.user_name %>
              <% end %>
            </span>
          </div>
          <div><%= user.introduction %></div>
        </div>
      <% end %>

    </div>
  </div>
</main>