<main class="page-post-show">
  <div class="container">
    <div class="row">
      <div class="post-detail py-5">
        <div class="card w-75 mx-auto mt-4">
          <%= image_tag @post.image, class:"card-img-top"; %>
          <div class="card-body">
            <div class="row">
              <div class="col-2">
                 <%= image_tag @post.user.get_profile_image, size: '64x64', class:"mt-3 rounded-circle";  %>
              </div>
              <div class="col-10">
                <p class="card-title">
                  <%= link_to(admin_post_path(@post.id), class:"text-dark") do %>
                    <strong>タイトル</i><span> <%= @post.title %></span></strong>
                  <% end %>
                </p>
                <p class="card-title">説明：<%= @post.caption %></p>
                <span><i class="fas fa-user"></i>
                By <%= link_to "#{@post.user.user_name}", user_path(@post.user) %> ｜ </span>
                <span><i class="fa fa-calendar"></i> <%= @post.created_at.strftime('%Y/%m/%d') %> ｜ </span>
                <span id="comments_count" class="mt-3">
                  <i class="fa fa-comment"></i>
                  <%= render partial: "admin/comments/comments_count", locals: { post: @post } %>
                　｜
                </span>
                <span> 
                  <%= link_to  admin_post_path(@post), method: :delete, class:"text-dark", data: { confirm: "本当に消しますか？間違えていませんか？" } do %>
                    <i class="fa-solid fa-trash-can"></i>
                  <% end %>
                </span>
              </div>
            </div>
            <hr>
            <div class="comments card-text">
              <p id="comments_area"><%= render partial: "admin/comments/comments", locals: { post: @post } %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>