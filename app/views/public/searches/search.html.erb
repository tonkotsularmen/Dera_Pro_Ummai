<main>
  <div class="container">
    <div class="row mt-2">
      <div class="offset-2 col-8 text-center mt-3">
        <div><h3>検索結果</h3></div>
      </div>
    </div>
    <div class="row">
      <div class="offset-2 col-8">
        <% if @range == "User" %>
        <div class="row"><div class="col d-flex justify-content-end"><%= @users.count %>件が該当しました</div></div>
          <table class="table table-hover border-0">
            <thead class="thead-white">
              <tr>
                <th scope="col"></th>
                <th scope="col" class="text-center">ユーザーネーム</th>
                <th scope="col" class="text-center">ゴール</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
              <tr>
                <th scope="row" class="p-1 text-center">
                  <%= link_to user_path(user) do %>
                    <%= image_tag user.get_profile_image, size: "40x40", class: "rounded-circle" %>
                  <% end %>
                </th>
                <td class="text-center">
                  <%= link_to user_path(user) do %>
                    <%= user.user_name %>
                  <% end %>
                </td>
                <td class="text-center"><%= user.goal %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <div class="row mb-2"><div class="col d-flex justify-content-end"><%= @posts.count %>件が該当しました</div></div>
          <div class="row d-flex flex-wrap mb-5">
            <% @posts.each do |post| %>
              <div class="card col-4" style="width: 18rem;">
                <%= link_to post_path(post.id) do %>
                  <% if post.image.present? %>
                    <%= image_tag post.image, class: "img-fluid" %>
                  <% else %>
                    <%= image_tag 'no_image.jpg', class: "img-fluid " %>
                  <% end %>
                <% end %>
                <div class="card-body">
                  <h5 class="card-title">
                    <%= link_to post_path(post.id) do %><%= post.title %><% end %></h5>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="offset-4 col-4 d-flex justify-content-center">
      </div>
    </div>
  </div>
</main>