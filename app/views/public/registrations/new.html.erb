<main class="page-registarations-new">
  <div class="container">
    <div class="row">
      <div class="offset-2 col-8">
        <div class="row border-bottom">
          <h3 class="mx-auto mt-5 mb-0">アカウント登録</h3>
        </div>
        <%= form_with model: @user, url: user_registration_path do |f| %>
        <div class="row mt-3">
          <div class="offset-1 col-3">
            <span>プロフィール画像</span>
          </div>
          <div class="col-8"><!--時間あればプレビュー機能-->
            <span><%= f.file_field :profile_image, accept: "image/*" %></span>
          </div>
        </div>
        <div class="row mt-3">
          <div class="offset-1 col-3">
            <span>メールアドレス</span>
          </div>
          <div class="col-8">
            <span><%= f.email_field :email, class: "form-control" %></span>
          </div>
        </div>
        <div class="row mt-3">
          <div class="offset-1 col-3">
            <span>ユーザーネーム</span>
          </div>
          <div class="col-8">
            <span><%= f.text_field :user_name, class: "form-control" %></span>
          </div>
        </div>
        <div class="row mt-3">
          <div class="offset-1 col-3">
            <span>
              パスワード<br />
              <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
            <% end %>
            </span>
          </div>
          <div class="field col-8">
            <%= f.password_field :password, required: true, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>
        <div class="row mt-3">
          <div class="offset-1 col-3">
            <span>パスワード確認用</span>
          </div>
          <div class="field col-8">
            <div class="field">
              <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password", class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row mt-3">
          <div class="offset-4 col-4 d-flex justify-content-center">
            <div class="actions"><%= f.submit "登 録", class: "btn btn-outline-success" %></div>
          </div>
        <% end %>
        </div>
        <div class="row mt-3">
          <div class="col d-flex justify-content-center">
            アカウント登録がお済みの方は<%= render "public/shared/links" %>
          </div>
        </div>
      </div>
      <div class="col-2"></div>
    </div>
  </div>
</main>