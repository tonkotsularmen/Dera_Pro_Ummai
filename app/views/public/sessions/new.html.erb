<main class="page-users-index">
  <div class="container-xl">

    <div class="row d-lg-none  mt-2">
      <div class="col p-0">
        <div class="row ml-4">
          <h3 class="mt-5 mb-0">ログイン</h3>
        </div>
        <div class="row">
          <div class="col d-flex align-items-center form-group">
            <%= form_with model: @user, url: user_session_path do |f| %>
            <%= render "public/shared/error_messages", resource: resource %>
            <div class="row ml-4 mt-3">
              <div class="col">
                <span><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %></span>
              </div>
            </div>
            <div class="row ml-4 mt-3">
                <div class="col">
                  <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "パスワード" %>
                </div>
            </div>
            <div class="row ml-4 mt-3">
              <div class="col"><%= f.submit "Log in", class: "btn btn-outline-success" %></div>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row d-lg-none  mt-2">
      <div class="col ml-4">
        <div>アカウント登録がまだの方は<%= link_to "こちら", new_registration_path(resource_name) %></div>
      </div>
    </div>

    <div class="row d-none d-lg-block my-3">
      <div class="col">
        <h3 class="mx-auto mt-5 mb-0">ログイン</h3>
      </div>
    </div>

    <div class="row d-none d-lg-block my-3">
      <div class="col">
        <%= form_with model: @user, url: user_session_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="row mt-3">
          <div class="col-2 ml-5 px-0 d-flex justify-content-center">
            <div>メールアドレス</div>
          </div>
          <div class="col-6 pl-0">
            <div><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></div>
          </div>
        </div>
        <div class="row mt-3">
          <div class="col-2 ml-5 px-0 d-flex justify-content-center">
            <div>パスワード</div>
          </div>
          <div class="col-6 pl-0">
            <div><%= f.password_field :password, autocomplete: "current-password", class: "form-control" %></div>
          </div>
        </div>
        <div class="row mt-3">
          <div class="offset-4 col-4 d-flex justify-content-center">
            <div class="actions"><%= f.submit "Log in", class: "btn btn-outline-success" %></div>
          </div>
        <% end %>
        </div>
        <div class="row mt-3">
          <div class="offset-4 col-4 d-flex justify-content-center">
            <div>アカウント登録がまだの方は<%= link_to "こちら", new_registration_path(resource_name) %></div>
          </div>
        </div>
      </div>
    </div>

  </div>
</main>