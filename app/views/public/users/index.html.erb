<div class="container">
  <div class="row">
    <div class="col-4">
      <div class="row">
        <%= link_to user_path(current_user) do %>
          <%= image_tag current_user.get_profile_image, size: "100x100", class: "rounded-circle" %>
        <% end %>
      </div>
      <div class="row"><%= current_user.user_name %></div>
      <div class="row"><%= current_user.goal %></div>
      <div class="row">P<%= current_user.protein %>:F<%= current_user.fat %>:C<%= current_user.carbo %></div>
      <div class="row">挫折しそうボタン</div>
      <div class="row">食欲やばいボタン</div>
      <div class="row">
        <% if current_user.user_name != "guestuser" %>
          <%= link_to "投稿する", new_post_path, class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
    <div class="col-8 mx-auto">
      <div class="card-wrap">
        <% @posts.each do |post| %>
        <div class="card">
          <div class="card-header align-items-center">
            <!--ユーザー画像-->
            <%= link_to user_path(post.user) do %>
              <%= image_tag post.user.get_profile_image, size: "50x50", class: "rounded-circle" %>
            <% end %>
            <!--ユーザーネーム-->
            <%= link_to user_path(post.user) do %>
              <strong><%= post.user.user_name %></strong>
            <% end %>
            <!--削除アイコン-->
            <% if post.user_id == current_user.id %>
              <%= link_to post_path(post.id), method: :delete, class: "d-flex justify-content-end" do %>
                <i class="fa-solid fa-trash"></i>
              <% end %>
            <% end %>
          </div>
          <%= link_to post_path(post.id) do %>
            <% if post.image.present? %>
              <%= image_tag post.image, width: "100%", height: "100%" %>
            <% else %>
              <%= image_tag 'no_image.jpg', width: "100%", height: "100%" %>
            <% end %>
          <% end %>
          <div class="card-body">
            <div class="row">
              <!--いいね-->
              <div id="like_buttons_<%= post.id %>">
                <%= render partial: "public/likes/likes", locals: { post: post } %>
              </div>
            </div>
            <h5 class="card-title"><%= post.title %></h5>
            <p class="card-text"><%= post.caption %></p>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>