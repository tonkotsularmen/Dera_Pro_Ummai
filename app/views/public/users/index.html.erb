<main class="page-users-index">
  <div class="container-fluid">
    <div class="row index-box">
      <div class="col-2 mt-3">
        <%= render 'public/users/info' %>
      </div>
      <div class="col-7">
        <div class="row border-bottom my-4">
          <% @users.each do |user| %>
            <%= link_to user_path(user) do %>
                <%= image_tag user.get_profile_image, size: "50x50", class: "rounded-circle" %>
            <% end %>
          <% end %>
        </div>
        <% @posts.each do |post| %>
        <div class="card border-0 mb-3">
          <div class="card-header p-0 d-flex align-items-center bg-white">
            <!--ユーザー画像-->
              <%= link_to user_path(post.user) do %>
                <%= image_tag post.user.get_profile_image, size: "50x50", class: "rounded-circle" %>
              <% end %>
              <!--ユーザーネーム-->
              <%= link_to user_path(post.user) do %>
                <strong><%= post.user.user_name %></strong>
              <% end %>
              <span>
                <%= post_time(post) %>
              </span>
          </div>
          <div class="post-image bd-placeholder-img card-img-top">
            <%= link_to post_path(post.id) do %>
              <% if post.image.present? %>
                <%= image_tag post.image, class: "img-fluid" %>
              <% else %>
                <%= image_tag 'no_image.jpg', class: "img-fluid " %>
              <% end %>
            <% end %>
          </div>
          <div class="card-body py-1">
            <div class="row m-0">
              <!--いいね-->
              <div id="like_buttons_<%= post.id %>" class="mr-3">
                <%= render partial: "public/likes/likes", locals: { post: post } %>
              </div>
              <%= link_to post_path(post) do %>
                <i class="fa-regular fa-message fa-lg"></i>
              <% end %>
            </div>
            <div class="row"><h5 class="card-title"><%= post.title %></h5></div>
            <div class="row">メダル<%= render partial: "public/likes/likes_count", locals: { post: post } %>件</h5></div>
          </div>

          <div class="card-footer text-muted border-top-0 border-bottom bg-white pt-1">
            <div id="comments_form" class="form-group">
              <%= render partial: "public/comments/comments_form", locals: { post: post, comment: @comment } %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
      <div class="col-3 mt-3">
        <%= render partial: "public/posts/best_likes_posts", locals: { best_likes_posts: @best_likes_posts } %>
      </div>
    </div>
  </div>
</main>