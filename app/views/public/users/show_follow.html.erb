<main>
  <div class="container">
    <div class="row mt-3">

      <% @users.each do |user| %>
        <div class="col-md-4 border pt-2 pb-1">
          <div class="p-1">
            <%= link_to user_path(user) do %>
              <%= image_tag user.get_profile_image, class: "rounded-circle icon-40" %>
            <% end %>
            <span class="ml-3">
              <% if user.user_status == 0 %>
                このユーザーは退会しています
              <% else %>
                <%= link_to user_path(user) do %>
                  <%= user.user_name %>
                <% end %>
              <% end %>
            </span>
          </div>
          <% if user.user_status != 0 %>
            <div><%= user.introduction %></div>
          <% end %>
        </div>
      <% end %>

    </div>
  </div>
</main>