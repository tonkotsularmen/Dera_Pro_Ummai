<div class="row mt-3">
  <div class="col-8">
    <span>
      <%= link_to user_path(current_user) do %>
        <%= image_tag current_user.get_profile_image, size: "100x100", class: "rounded-circle" %>
      <% end %>
    </span>
  </div>
</div>
<div class="row mt-3">
  <div class="col-8">
    <span><%= current_user.user_name %></span>
  </div>
</div>
<div class="row mt-3">
  <div class="col-8">
    <span>
      <% if current_user.goal.blank? %>
        あなたはまだゴールを定めていません
      <% else %>
        あなたのゴールは<br />
        <%= current_user.goal %>　です
      <% end %>
    </span>
  </div>
</div>

<div class="row mt-3">
  <div class="col-8">
    <span>タンパク質：<%= current_user.protein %></span>
  </div>
</div>
<div class="row mt-3">
  <div class="col-8">
    <span>脂質：<%= current_user.fat %></span>
  </div>
</div>
<div class="row mt-3">
  <div class="col-8">
    <span>炭水化物：<%= current_user.carbo %></span>
  </div>
</div>

<!--新規投稿リンク-->
<% if current_user.email != "guest@example.com" %>
  <div class="row mt-3">
    <div class='col-8'>
      <%= link_to new_post_path do %>
        <i class="fa-solid fa-pen-to-square"></i>新規投稿
      <% end %>
    </div>
  </div>

  <div class="row mt-3">
    <div class='col-8'>
       <%= link_to new_shokuyoku_post_path do %>
        <i class="fa-solid fa-bacon"></i>食欲がやばいとき
      <% end %>
    </div>
  </div>

  <div class="row mt-3">
    <div class='col-8'>
      <%= link_to new_zasetsu_post_path do %>
        <i class="fa-solid fa-face-tired"></i>やりたくないとき
      <% end %>
    </div>
  </div>
<% end %>