<div class="row mt-3">
  <div class="col-8">
    <span>
      <%= link_to user_path(current_user) do %>
        <%= image_tag current_user.get_profile_image, size: "100x100", class: "rounded-circle" %>
      <% end %>
    </span>
  </div>
</div>
<div class="row mt-3">
  <div class="col-8">
    <span><%= current_user.user_name %></span>
  </div>
</div>
<div class="row mt-3">
  <div class="col-8">
    <span>
      <% if current_user.goal.blank? %>
        あなたはまだ目標を定めていません
      <% else %>
        あなたの理想は<br />
        <%= current_user.goal %>　です
      <% end %>
    </span>
  </div>
</div>
<div class="row mt-3">
  <div class="col-8">
    <span><%= current_user.protein %></span>
  </div>
</div>
<div class="row mt-3">
  <div class="col-8">
    <span><%= current_user.fat %></span>
  </div>
</div>
<div class="row mt-3">
  <div class="col-8">
    <span><%= current_user.carbo %></span>
  </div>
</div>
<div class="row mt-3">
  <% if current_user.user_name != "guestuser" %>
    <div class='col-8'>
      <%= link_to "投稿する", new_post_path %>
    </div>
  <% end %>
</div>