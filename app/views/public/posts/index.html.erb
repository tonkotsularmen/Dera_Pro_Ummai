<main class="page-posts">
  <div class="container-fluid">
    <div class="row mt-1 mb-2">
      <div class="offset-lg-3 col-lg-5">
        <%= render partial: "public/posts/search_form", locals: { q: @q } %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-6">
        <div class="row">
          <% @posts.each do |post| %>
          <div class="col-lg-4 p-1">
            <%= link_to post_path(post.id) do %>
              <% if post.image.present? %>
                <%= image_tag post.image, width: "100%", height: "150px" %>
              <% else %>
                <%= image_tag 'no_image.jpg', width: "100%", height: "150px" %>
              <% end %>
            <% end %>
          </div>
          <% end %>
          </div>
          <%= paginate @posts %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>