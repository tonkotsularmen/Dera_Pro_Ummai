<div class="container">
  <div class="row">
    <div class="col">
      <h1>投稿一覧画面</h1>
      <% @posts.each do |post| %>
        <%= image_tag post.image, size: "100x100" %>
        <%= post.title %>
        <%= post.caption %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <%= link_to "新規投稿", new_post_path, class: "btn btn-primary" %>
  </div>
</div>
