<main class="page-posts">
  <div class="container-xl p-2">
    <div class="row mb-2">
      <div class="offset-lg-3 col-lg-5">
        <!--検索窓-->
        <div><%= render partial: "public/searches/search_form" %></div>
      </div>
    </div>
    <div class="row mt-2">
      <div class="col d-flex flex-wrap mt-2">
        <% @posts.each do |post| %>
          <div class="col-3">
            <%= link_to post_path(post) do %>
              <%= image_tag post.image.variant( resize: "300x200>" ).processed, class: "img-fluid" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <%= paginate @posts, theme: 'twitter-bootstrap-4' %>
  </div>
</main>