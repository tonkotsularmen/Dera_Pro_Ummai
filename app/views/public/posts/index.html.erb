<main class="page-posts">
  <div class="container-fluid">
    <div class="row">
      <div class="offset-lg-3 col-lg-5">
        <h5>検索</h5>
        <%= render partial: "public/posts/search_form", locals: { q: @q } %>
      </div>
    </div>
    <div class="row">
      <div class="offset-lg-3 col-lg-5">
        <div class="card-group d-flex flex-wrap">
        <% @posts.each do |post| %>
          <div class="card border-0">
            <%= link_to post_path(post.id) do %>
              <% if post.image.present? %>
                <%= image_tag post.image, width: "100%", height: "150px" %>
              <% else %>
                <%= image_tag 'no_image.jpg', width: "100%", height: "150px" %>
              <% end %>
            <% end %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
    <!-- paginate @posts -->
  </div>
</main>