<div class="container">
  <div class="row">
    <div class="col">
      <h1>投稿フォーム</h1>
      <%= form_with model: @post do |f| %>
        <h4>画像</h4>
          <%= f.file_field :image, accept: "image/*" %>
        <h4>タイトル</h4>
          <%= f.text_field :title %>
        <h4>説明</h4>
          <%= f.text_area :caption %>
        <%= f.submit '投稿' %>
      <% end %>
    </div>
  </div>
</div>