<main class="page-post-new">
  <div class="container">
    <div class="row">
      <div class="col">
        <% if flash[:error].present? %>
          <div id="error_explanation">
            <h3><%= flash[:error].count %> 件のエラーがあります</h3>
            <ul>
              <% flash[:error].each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <h1>投稿フォーム</h1>
        <%= form_with model: @post do |f| %>
          <h4>画像</h4>
            <%= f.file_field :image, accept: "image/*", required: true %>
          <h4>タイトル</h4>
            <%= f.text_field :title, required: true %>
          <h4>説明</h4>
            <%= f.text_area :caption, required: true %>
          <%= f.submit '投稿' %>
        <% end %>
      </div>
    </div>
  </div>
</main>