<div class="container">
  <div class="row">
    <div class="card">
      <%= image_tag @post.image, width: "100%", height: "100%" %>
      <div class="card-body">
        <div class="row">
          <h5 class="card-title"><%= @post.title%></h5>
          <p class="card-text"><%= @post.caption%></p>
        </div>
      <div class="row">
        <div>
          <%= form_with model: [@post, @comment] do |f| %>
            <%= f.text_area :comment, rows: '2', placeholder: "コメントをここに" %>
            <%= f.submit "送信する", class:"btn btn-info mt-2 float-right" %>
          <% end %>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
