<main class="page-post-show">
  <div class="container">
    <div class="row">
      <div class="post-detail py-5">
        <div class="card w-75 mx-auto mt-4">
          <%= image_tag @post.image, class:"card-img-top"; %>
          <div class="card-body">
            <div class="row">
              <div class="col-2">
                 <%= image_tag @post.user.get_profile_image, size: '64x64', class:"mt-3 rounded-circle";  %>
              </div>
              <div class="col-10">
                <p class="card-title">
                  <%= link_to(post_path(@post.id), class:"text-dark") do %>
                    <strong>タイトル</i><span> <%= @post.title %></span></strong>
                  <% end %>
                </p>
                <p class="card-title">説明：<%= @post.caption %></p>
                <span><i class="fas fa-user"></i> By <%= @post.user.user_name %> ｜ </span>
                <span><i class="fa fa-calendar"></i> <%= @post.created_at.strftime('%Y/%m/%d') %> ｜ </span>
                <span><i class="fa fa-comment"></i> <%= link_to "#{@post.comments.count}", post_path(@post.id), class:"text-dark" %> ｜ </span>
                <span id="like_buttons_<%= @post.id %>"><%= render partial: "public/likes/likes", locals: { post: @post } %></span>
                <% if @post.user == current_user %>
                  <span> ｜ </span><%= link_to "削除", post_path(@post), class:"text-dark", method: :delete %>
                <% end %>
              </div>
            </div>
            <hr>
            <div class="comments card-text">
              <h4 id="comments_count" class="mt-3"><%= render partial: "public/comments/comments_count", locals: { post: @post } %></h4>
              <p id="comments_area"><%= render partial: "public/comments/comments", locals: { post: @post } %></p>
            </div>
            <hr>
            <div id="comments_form" class="form-group">
              <%= render partial: "public/comments/comments_form", locals: { post: @post, comment: @comment } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>