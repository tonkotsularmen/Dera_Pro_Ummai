<% if post.liked_by?(current_user) %>
  <%= link_to post_likes_path(post), method: :delete, remote: true do %>
    <i class="fa-sharp fa-solid fa-medal" aria-hidden="true" style="color: gold;"></i><%= post.likes.count %>
  <% end %>
<% else %>
  <%= link_to post_likes_path(post), method: :post, remote: true do %>
    <i class="fa-sharp fa-solid fa-medal" aria-hidden="true" style="color: silver;"></i><%= post.likes.count %>
  <% end %>
<% end %>