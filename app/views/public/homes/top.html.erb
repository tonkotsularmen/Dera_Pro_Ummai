<div class="container">
  <div class="row">
    <div class="col">
      <div>
        <%= flash[:notice] %>
      </div>
      <h1>
        <strong>Welcome to DePU!</strong>
      </h1>
    </div>
  </div>
  <div class="row">
    <% unless user_signed_in? %>
      <div class="col">
        <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block mb-3 sign_in", method: :post %>
        <%= link_to "Log in", new_user_session_path, class: "ml-3 btn btn-primary" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "ml-3 btn btn-info" %>
      </div>
    <% end %>
  </div>
</div>
