    <div class="row">
      <div class="col-lg-2">
      </div>
      <div class="col-lg-8 my-3">
        <% if admin_signed_in? %>
          <%= link_to "管理画面へ", admin_users_path, class: "btn btn-outline-secondary" %>
        <% else %>
          <%= link_to user_path(current_user) do %>
            <i class="fa-regular fa-user"></i>マイページ
