    <div class="row">
      <div class="col-lg-2">
      </div>
      <div class="col-lg-8 mt-3">
        <%= link_to user_path(current_user) do %>
          <i class="fa-regular fa-user"></i>マイページ
        <% end %>
      </div>
    </div>
  </div>
</main>